@using EShop.Domain.DTO
@model ShoppingCartDTO

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Shopping Cart</h1>

<div class="container">
    <a class="btn btn-success mb-3" asp-action="Order">Order</a>

    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price (per unit)</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.Products.Count; i++)
            {
                var currentProduct = Model.Products[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@currentProduct.Product?.ProductName</td>
                    <td>@currentProduct.Quantity</td>
                    <td>@currentProduct.Product?.Price</td>
                    <td>
                        <a asp-action="DeleteFromCart"
                           asp-route-id="@currentProduct.ProductId"
                           class="btn btn-danger btn-sm">
                            Delete from cart
                        </a>
                    </td>
                </tr>
            }
            </tbody>
            <tfoot>
            <tr>
                <th>Total Price:</th>
                <th></th>
                <th></th>
                <th>@Model.TotalPrice ДЕН</th>
                <th></th>
            </tr>
            </tfoot>
        </table>
    </div>
</div>